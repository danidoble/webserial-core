  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/w3c-web-serial": "^1.0.7",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "3.4.2",
    "puppeteer": "^24.1.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.21.0",
    "uuid": "^11.0.5",
    "vite": "^6.0.11"
