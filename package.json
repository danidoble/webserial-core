{
  "name": "webserial-core",
  "description": "Webserial Core to easy connections with serial devices",
  "version": "1.2.0",
  "type": "module",
  "license": "MIT",
  "author": "danidoble",
  "repository": {
    "type": "git",
    "url": "https://github.com/danidoble/webserial-core.git"
  },
  "bugs": {
    "url": "https://github.com/danidoble/webserial-core/issues"
  },
  "homepage": "https://github.com/danidoble/webserial-core#readme",
  "keywords": [
    "webserial",
    "serial",
    "core",
    "web",
    "iot",
    "device",
    "communication",
    "usb"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/webserial-core.umd.cjs",
  "module": "./dist/webserial-core.js",
  "types": "./dist/types/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/webserial-core.js",
      "require": "./dist/webserial-core.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && prettier --write ./lib/**/*.ts && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts ./lib",
    "format": "prettier --write ./lib/**/*.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "socket.io-client": "^4.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/w3c-web-serial": "^1.0.8",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "happy-dom": "^20.5.3",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "tests/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
